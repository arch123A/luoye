export WORKON_HOME=~/Envs #设置环境变量

mkdir -p $WORKON_HOME #创建虚拟环境管理目录

find / -name virtualenvwrapper.sh #找到virtualenvwrapper.sh的路径

source 路径 #激活virtualenvwrapper.sh





cd /usr/local/nginx/sbin

启动：./nginx

 停止：./nginx -s stop

